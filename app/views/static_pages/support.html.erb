                                <div class="row">
                               <label class="checkbox-inline">
                                  <h4>DOCTOR <input type="radio" name="optionRadiosinline" id="optionRadios1" 
                                     value="DOCTOR" checked></h4>
                               </label>
                               <label class="checkbox-inline">
                                  <h4>ASSISTANT <input type="radio" name="optionRadiosinline" id="optionRadios2" 
                                     value="ASSISTANT"> </h4>
                               </label>
                               </div>
                            </div>
                        </div>
