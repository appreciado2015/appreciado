<%= content_for :index_body do %>id="home" class="homepage"
<% end %>

<section id="top-top">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1>HOW CAN WE HELP?</h1>

        <!-- <p>WE HAVE PROVIDED A NUMBER OF WAYS FOR YOU TO GET INTO<br>CONTACT WITH US AT THE CENTRE....</p> -->

      </div>
    </div>
  </div>
</section>

<section id="support-form">
  <div class="container">
    <div class="row">
         <div class="col-md-4"></div><div class="col-md-6"><span class="alert alert-success hidden" id="message">Request has been submitted</span></div>
    </div>
    <div class="row">
      <div class="col-sm-12 pad-top2 pad-bot3">
        <form action="https://test.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">
          <input type="hidden" value="00D4B0000008t7C" name="oid">
          <input type="hidden" value="http://appreciado.herokuapp.com/talk-with-us?submitted=1" name="retURL">
          <input type="hidden" value="0" name="debug">
          <input type=hidden name="00N4B000000MaXT" id="00N4B000000MaXT" value="General Lead">
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>YOUR TITLE:</h4></div>
              <div class="col-xs-7 col-sm-6 text-left">
                <div class="row">
                  <label class="checkbox-inline">
                    <h4>OFFICE MANAGER <%= radio_button_tag '00N61000005nsvw', "Office Manager", checked: true %></h4>
                  </label>
                  <label class="checkbox-inline">
                    <h4>DENTIST <%= radio_button_tag '00N61000005nsvw', "Dentist" %></h4>
                  </label>                  
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>FIRST NAME:</h4></div>
              <div class="col-xs-7 col-sm-6">
                <%= text_field_tag 'first_name', nil, tabindex: "1", class: "form-control", required: true, oninvalid: "setCustomValidity('First name can not be blank')", onchange: "try{setCustomValidity('')}catch(e){}" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>LAST NAME:</h4></div>
              <div class="col-xs-7 col-sm-6">
                <%= text_field_tag 'last_name', nil, tabindex: "2", class: "form-control", required: true, oninvalid: "setCustomValidity('Last name can not be blank')", onchange: "try{setCustomValidity('')}catch(e){}" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>OFFICE NUMBER:</h4></div>
              <div class="col-xs-7 col-sm-6">
                <%= text_field_tag 'mobile', nil, tabindex: "3",minlength:10, maxlength: 10, placeholder: 'ie:4035115151', class: "form-control", required: true, pattern: "[0-9]+",  oninvalid: "setCustomValidity('Mobile number must be 10 digit')", onchange: "try{setCustomValidity('')}catch(e){}" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>EMAIL:</h4></div>
              <div class="col-xs-7 col-sm-6">
                <%= email_field_tag 'email', nil, tabindex: "4", class: "form-control", required: true, oninvalid: "setCustomValidity('Please use email format')", onchange: "try{setCustomValidity('')}catch(e){}" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="text-right col-xs-5 col-sm-4"><h4>WHAT CAN WE<br>HELP YOU<br>WITH?:</h4></div>
              <div class="col-xs-7 col-sm-6">
                <%= text_area_tag '00N61000007LxCF', nil, tabindex: "5", class: "form-control", rows: "8", required: true, oninvalid: "setCustomValidity('Message can not be blank')", onchange: "try{setCustomValidity('')}catch(e){}" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
            <div class="col-sm-offset-3 col-sm-7 hidden-xs text-right pad-top1">
              <%= submit_tag 'Submit', tabindex: "6", class: "btn-pink" %>
            </div>
            <div class="col-xs-12 hidden-sm hidden-md hidden-lg text-right pad-top1">
              <%= submit_tag 'Submit', tabindex: "6", class: "btn-pink btn btn-sm" %>
            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>
