<%= content_for :index_body do %>id="home" class="homepage"<% end %>    

<section id="top-top">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1>CONNECT WITH OUR TEAM RIGHT AWAY</h1>
                <p>WE HAVE PROVIDED A NUMBER OF WAYS FOR YOU TO GET INTO<br>CONTACT WITH US AT THE CENTRE....</p>
            </div>
        </div>
    </div>
</section>

<section id="support-mid1">
    <div class="container">
        <div class="row pad-top2">
            <div class="col-md-12 pad-lr5">
                <div class="row">
                    <div class="col-md-3" role="presentation">
                        <a href="#please-call-me" aria-controls="please-call-me" role="tab" data-toggle="tab">
                        <div class="thumbnail text-center">                             
                            <i class="fa fa-mobile fa-3x"></i>
                            <div class="caption">
                                <h1>PLEASE CALL ME</h1>
                                <p>Once you submit your details, we will give you a call right away.</p>
                            </div>                        
                        </div>
                        </a>
                    </div>
                    <div class="col-md-3" role="presentation">
                        <a href="#schedule-a-call" aria-controls="schedule-a-call" role="tab" data-toggle="tab">
                        <div class="thumbnail text-center">
                            <i class="fa fa-calendar fa-3x"></i>
                            <div class="caption">
                                <h1>SCHEDULE A CALL</h1>
                                <p>Book a time with our centre to call you when it's convenient.</p>
                            </div>
                        </div>
                        </a>
                    </div>
                    <div class="col-md-3" role="presentation">
                        <a href="#call-u-later" aria-controls="call-u-later" role="tab" data-toggle="tab">
