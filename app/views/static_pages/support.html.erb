                            <div class="col-md-6">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-right col-md-4"><h4>EMAIL:</h4></div>
                            <div class="col-md-6">
                                <input type="email" class="form-control">
                            </div>
                        </div>                        
