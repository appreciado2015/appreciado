<%= content_for :datepicker_css do %>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<% end %>
<%= content_for :index_body do %>id="home" class="homepage"<% end %>    

<section id="top-top">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1>SCHEDULE A CALL</h1>
                <p>WE JUST NEED YOU TO CHOOSE A TIME THAT WORKS FOR YOU</p>
            </div>
        </div>
    </div>
</section>

<section id="schedule-mid">
    <div class="container">
        <div class="row pad-top2 text-center">
            <div class="col-sm-12">
                <input type="text" id="datepicker" class="date-picker">
            </div>
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 time-zone">
                <p>Time Zone</p>
                <select class="form-control" id="timezone"></select>
            </div>
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <p>I'd like to receive a<br>call between</p>
                
                  <p class="time-schedule">
                    <input type="radio" name="optionRadiosinline" id="optionRadios1" 
                     value="8to10" checked> 8-10 am<br>
                    <input type="radio" name="optionRadiosinline" id="optionRadios2" 
                     value="10to12"> 10-12 pm<br>
                    <input type="radio" name="optionRadiosinline" id="optionRadios3" 
                     value="2to4"> 2-4 pm<br>
                    <input type="radio" name="optionRadiosinline" id="optionRadios4" 
                     value="4to6"> 4-6 pm</p>
            </div>
            <div class="col-sm-12 pad-top4 pad-bot2">
                <button type="button" class="btn-pink" data-toggle="modal" data-target="#myModalmom">SCHEDULE<br>THIS CALL</button>
            </div>
        </div>
    </div>
</section>

<!-- Modal PLEASE CALL ME -->
<div class="modal-blue">
    <div class="modal fade" id="please-call-me" tabindex="-1" role="dialog" aria-labelledby="myModalLabelCallMe">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close fa-4x" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="modal-title text-center" id="myModalLabelCallMe">WE'LL CALL YOU</h1>
            <h3 class="font-AmsiProCR text-center">PLEASE CONFIRM YOUR INFORMATION</h3>
          </div>
          <div class="modal-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="text-right col-md-4 pad-top1"><h4>YOUR TITLE:</h4></div>
                    <div class="col-md-6 text-left">
                        <div class="row">
                       <label class="checkbox-inline">
                          <h4>DOCTOR <input type="radio" name="optionRadiosinline" id="optionRadios1" 
                             value="DOCTOR" checked></h4>
                       </label>
                       <label class="checkbox-inline">
                          <h4>ASSISTANT <input type="radio" name="optionRadiosinline" id="optionRadios2" 
                             value="ASSISTANT"> </h4>
                       </label>
                       </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-right col-md-4"><h4>FIRST NAME:</h4></div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="form-group">
                    <div class="text-right col-md-4"><h4>LAST NAME:</h4></div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="form-group">
                    <div class="text-right col-md-4"><h4>OFFICE NUMBER:</h4></div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="form-group">
                    <div class="text-right col-md-4"><h4>EMAIL:</h4></div>
                    <div class="col-md-4">
                        <input type="email" class="form-control">
                    </div>
                    <div class="col-md-4"></div>
                </div>                        
                <div class="form-group">
                    <div class="text-right col-md-4"><h4>WHAT CAN WE<br>HELP YOU<br>WITH?:</h4></div>
                    <div class="col-md-4">
                        <textarea class="form-control" rows="5"></textarea>
                    </div>
                    <div class="col-md-4"></div>
                </div>                        
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-5 text-right pad-top1">
                        <button type="submit" class="btn-white"><span>SUBMIT</span></button>
                    </div>
                </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>
</div>

<%= content_for :modal_js do %>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="/assets/timezones.full.min.js"></script>
<script type="text/javascript">
$('#timezone').timezones();
</script>

<script type="text/javascript">
$(document).ready(function () {
    $("#datepicker").datepicker('option', 'dateFormat', 'M dd, yy').datepicker('setDate',new Date())
});
</script>

<script type="text/javascript">
$("#datepicker").datepicker({
    beforeShow: function (input, inst) {
        setTimeout(function () {
            inst.dpDiv.css({
                top: 300,
                left: 550
            });
        }, 0);
    }
});
</script>

<% end %>