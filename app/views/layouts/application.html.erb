        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
    
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">                    
                    <li><%= link_to "TOP BENEFITS", root_path, :method => :get %></li>
                    <li><%= link_to "WHO WE ARE?", about_path, :method => :get %></li>
                    <li><%= link_to "PARTNERS", partners_path, :method => :get %></li>
                    <li><%= link_to "CONTACT", contact_path, :method => :get %></li>
                    <li><%= link_to "BLOG", root_path, :method => :get %></li>
                    <li><%= link_to "SUPPORT", support_path, :method => :get %></li>
                    <li><%= link_to "PURCHASE", purchase_path, :method => :get %></li>
                </ul>
            </div>
        </div><!--/.container-->
