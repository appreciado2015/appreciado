<body <%= yield :index_body %>>
<div class="text-right top-header">
  <img src="/assets/canada-flag.png" alt="Canada Flag"><span> PROUDLY CANADIAN</span>
</div>
<div class="text-center">
  <img src="/assets/logo.png" alt="logo" >
</div>
<header id="header">
    <nav id="main-menu" class="navbar navbar-default" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
    
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">                    
                    <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "TOP BENEFITS", root_path, :method => :get %></li>
                    <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "WHO WE ARE?", about_path, :method => :get %></li>
                    <li class="<%= 'active' if current_page?(partners_path) %>"><%= link_to "PARTNERS", partners_path, :method => :get %></li>
                    <li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "CONTACT", contact_path, :method => :get %></li>
                    <li><%= link_to "BLOG", root_path, :method => :get %></li>
                    <li class="<%= 'active' if current_page?(support_path) %>"><%= link_to "SUPPORT", support_path, :method => :get %></li>
                    <li class="<%= 'active' if current_page?(purchase_path) %>"><%= link_to "PURCHASE", purchase_path, :method => :get %></li>
                </ul>
            </div>
        </div><!--/.container-->
    </nav><!--/nav-->
</header><!--/header-->
<%= yield %>
