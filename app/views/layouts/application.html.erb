            <div class="col-sm-12 text-center" id="footer-bot">
                <ul>
                    <li><%= link_to "ABOUT APPRECIADO", about_path, :method => :get %></li>
                    <li><%= link_to "PRIVACY", root_path, :method => :get %></li>
                    <li><%= link_to "TERMS & CONDITIONS", root_path, :method => :get %></li>
                    <li><%= link_to "CONTACT", contact_path, :method => :get %></li>
                    <li ><%= link_to "<u>ALREADY A CUSTOMER?</u>".html_safe, root_path, :method => :get %></li>                    
                </ul>
            </div>
            
        </div>
    </div>
</footer>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
